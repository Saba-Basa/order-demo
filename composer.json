{
    "name": "sam/order-demo",
    "description": "Simple MVC order system in PHP",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Core\\": "src/Core",
            "App\\Repositories\\": "src/Repositories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Support": "tests/Support"
        }
    },
    "authors": [
        {
            "name": "sban",
            "email": "bani@posteo.de"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}